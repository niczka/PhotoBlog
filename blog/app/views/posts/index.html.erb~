|<% @tags.each do |tag| %>
    <%= link_to tag.name, tag, :class => "tag_list" %> |
<% end %>



<% @posts.each do |post| %>
  
    <h2><%=link_to post.title, post, :class => "post" %></h2>

    <p><%= post.created_at %></p>

    Tags: <% post.tags.each do |tag| %>
        <%= link_to tag.name, tag %>
    <% end %>

    <p>
    <ul class="gallery clearfix">
    <%= link_to image_tag(post.image.url(:medium), :title => post.title), post.image.url, {:rel => "prettyPhoto", :title => post.title} %>
    </ul>
    </p>

    <p><%= post.content %></p>

    <%= link_to 'More...', post %>

<% end %>


<br />

<% if admin_signed_in? %>
    <%= link_to 'New Post', new_post_path %>
<% end %>
